{
  "name": "wigxel-nextjs-typescript-boilerplate",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint && echo 'Lint complete.'",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "svg:convert": "npx @svgr/cli --icon --typescript --ignore-existing --memo --out-dir ./components/Icons -- public/assets/icons",
    "watch": "watch 'clear && npm run -s lint' pages components",
    "prepare": "husky install"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.1.0",
    "@wigxel/react-components": "^1.2.3",
    "@wigxel/utils": "^1.0.8",
    "axios": "^0.21.4",
    "classnames": "^2.3.2",
    "date-fns": "^2.16.1",
    "motion": "^11.15.0",
    "next": "15.1.2",
    "prettier": "^2.0.5",
    "ramda": "^0.27.1",
    "ramda-fantasy": "^0.8.0",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "react-hook-form": "^7.43.9",
    "styled-components": "^5.3.3",
    "tailwindcss": "^3.0.6",
    "typescript": "^4.6.2",
    "yup": "^0.32.8"
  },
  "devDependencies": {
    "@svgr/cli": "^6.5.1",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@types/node": "^17.0.21",
    "@types/react": "19.0.2",
    "autoprefixer": "^10.4.0",
    "eslint": "7",
    "eslint-config-next": "15.1.2",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.18.3",
    "eslint-plugin-react-hooks": "^2.3.0",
    "husky": "^7.0.4",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "lint-staged": "^13.2.2",
    "postcss": "^8.4.24",
    "postcss-preset-env": "^8.5.1",
    "watch": "^1.0.2"
  },
  "keywords": [
    "wigxel",
    "boilerplate",
    "nextjs"
  ],
  "lint-staged": {
    "*/**": "prettier --write --ignore-unknown"
  },
  "resolutions": {
    "@types/react": "19.0.2"
  }
}
